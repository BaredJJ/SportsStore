<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="/bootstrap/dist/css/*.min.css"/>
    <title>@ViewBag.Title</title>
    <style>
        .input-validation-error{ border-color: red; background-color: #fee;}
    </style>
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body class="m-1 p-1">
<div class="bg-info p-2 row">
    <div class="col">
        @ViewBag.Title
    </div>
    <div class="col-2">
        <a class="btn btn-primary" asp-action="Logout" asp-controller="Account">Log Out</a>
    </div>
</div>
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">@TempData["message"]</div>
    }
    @RenderBody()
</body>
</html>
